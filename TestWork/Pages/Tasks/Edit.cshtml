@page
@model TestWork.Pages.Tasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Tsk</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskData.Id" />
            <div class="form-group">
                <label asp-for="TaskData.Name" class="control-label"></label>
                <input asp-for="TaskData.Name" class="form-control" />
                <span asp-validation-for="TaskData.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskData.Description" class="control-label"></label>
                <input asp-for="TaskData.Description" class="form-control" />
                <span asp-validation-for="TaskData.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskData.ValidTo" class="control-label"></label>
                <input asp-for="TaskData.ValidTo" class="form-control" />
                <span asp-validation-for="TaskData.ValidTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskData.Completed" class="control-label"></label>
                <input asp-for="TaskData.Completed" class="form-control" />
                <span asp-validation-for="TaskData.Completed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
